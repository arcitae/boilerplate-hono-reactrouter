{
  "name": "boilerplate-fullstack",
  "version": "0.0.1",
  "description": "A modern full-stack template powered by Cloudflare Workers, using Hono for backend APIs, React Router for frontend routing, and shadcn/ui for beautiful, accessible components styled with Tailwind CSS",
  "private": true,
  "type": "module",
  "cloudflare": {
    "label": "React Router + Hono Fullstack App",
    "products": [
      "Workers"
    ],
    "categories": [
      "starter"
    ],
    "docs_url": "https://developers.cloudflare.com/workers",
    "preview_icon_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/d3db20ee-c3bf-4b5c-f1ed-d86021359e00/public",
    "preview_image_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/56caa8a9-d3ab-4ac6-32a9-6a5fc686e000/preview",
    "publish": true
  },
  "dependencies": {
    "@clerk/backend": "^2.27.0",
    "@clerk/react-router": "^2.3.3",
    "@cloudflare/vitest-pool-workers": "^0.10.15",
    "@hono/clerk-auth": "^3.0.3",
    "@hono/otel": "^1.0.1",
    "@hono/standard-validator": "^0.2.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-validator": "^0.7.5",
    "@posthog/react": "^1.5.2",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.2.0",
    "@react-router/cloudflare": "^7.11.0",
    "@react-router/fs-routes": "^7.11.0",
    "@react-router/node": "7.11.0",
    "@react-router/serve": "7.11.0",
    "@t3-oss/env-core": "^0.13.8",
    "@tailwindcss/vite": "^4.1.17",
    "dotenv": "^17.2.3",
    "hono": "^4.10.8",
    "hono-openapi": "^1.1.2",
    "isbot": "5.1.26",
    "lucide-react": "^0.477.0",
    "pg": "^8.16.3",
    "posthog-js": "^1.309.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router": "^7.11.0",
    "tailwindcss": "^4.1.17",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.8",
    "@rcmade/hono-docs": "^1.0.31",
    "@react-router/dev": "^7.11.0",
    "@types/node": "^24.0.4",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.1",
    "@types/react-dom": "^19.2.1",
    "@types/ws": "^8.18.1",
    "dotenv-cli": "^10.0.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.5.3",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0",
    "wrangler": "^4.56.0",
    "ws": "^8.18.3"
  },
  "scripts": {
    "build": "react-router build",
    "typegen": "wrangler types --config app/client/workers/wrangler.jsonc --path worker-configuration-client.d.ts && wrangler types --config app/server/workers/wrangler.jsonc --path worker-configuration-server.d.ts",
    "deploy": "npm run deploy:all",
    "dev": "react-router dev",
    "dev:server": "wrangler dev --config app/server/workers/wrangler.jsonc --port 8787",
    "dev:client": "react-router dev",
    "dev:all": "echo 'Run in separate terminals: npm run dev:server (Terminal 1) and npm run dev:client (Terminal 2)'",
    "preview": "npm run build && vite preview",
    "typecheck": "npm run typegen && react-router typegen && tsc -b",
    "test": "vitest run",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "post-cta-init": "npx create-db@latest",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:seed": "dotenv -e .env.local -- prisma db seed",
    "docs:generate": "npx @rcmade/hono-docs generate --config ./hono-docs.ts"
  }
}
