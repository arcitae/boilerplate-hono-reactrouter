{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "app/server/workers/**/*",
    "worker-configuration-client.d.ts",
    "worker-configuration-server.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./app/*"],
      "@frontend/*": ["app/client/*"],
      "@backend/*": ["./app/backend/*"],
      "@shared/*": ["./app/shared/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
